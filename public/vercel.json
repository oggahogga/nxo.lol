{
  "rewrites": [
    {
      "source": "/reviews",
      "destination": "/reviews/index.html"
    },
    {
      "source": "/showcases",
      "destination": "/showcases/index.html"
    },
    {
      "source": "/admin",
      "destination": "/public/admin/index.html"  # Adjusted path
    },
    {
      "source": "/api/test",
      "destination": "/public/api/test.js"      # If this exists
    },
    {
      "source": "/api/login",
      "destination": "/api/login.js"            # Points to root/api/
    },
    {
      "source": "/(.*)",
      "destination": "/public/index.html"       # Default to main HTML
    }
  ]
}
